extends layout

prepend title
    = __("Forgot password")

block content
    div.col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-3
        h1= __("Forgot password")

        if error
            div.alert.alert-danger
                strong
                    = error

        if success
            div.alert.alert-success
                strong
                    = success

        form(method='post',role='form')
            div.form-group
                label(for='email')= __("Email")
                input.form-control(id='email',type='text',name='email',value=email || "",placeholder='Email',autofocus="autofocus")
            button.btn.btn-default(type='submit',name='login',value='yes')= __("Forgot password")

