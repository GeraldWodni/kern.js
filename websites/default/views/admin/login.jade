extends admin

block content
    div.col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-3
        h1 Authentifikation erforderlich

        if error
            div.alert.alert-danger
                strong
                    = error

        form(action='/',method='post',role='form')
            div.form-group
                label(for='username') Benutzer
                input.form-control(id='username',type='text',name='username',placeholder='Name')
            div.form-group
                label(for='password') Passwort
                input.form-control(id='password',type='password',name='password',placeholder='Passwort')
            button.btn.btn-default(type='submit',name='login',value='yes') Login

    script(type='text/javascript',src='/js/jquery.min.js')
    script(type='text/javascript',src='/js/bootstrap.min.js')
